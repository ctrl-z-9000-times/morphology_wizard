{
  "package": {
    "productName": "Morphology Wizard"
  },
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "ui",
    "distDir": "ui",
    "withGlobalTauri": true
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "confirm": true
      },
      "window": {
        "unminimize": true,
        "setFocus": true,
        "setFullscreen": true,
        "close": true
      },
      "globalShortcut": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Morphology Wizard",
        "label": "wizard",
        "url":   "index.html",
        "minimizable":       true,
        "maximizable":       true,
        "resizable":         true,
        "closable":          true,
        "fullscreen":        false,
        "focus":             true,
        "decorations":       true,
        "visible":           true,
        "alwaysOnTop":       false,
        "contentProtected":  false,
        "skipTaskbar":       false,
        "acceptFirstMouse":  false,
        "hiddenTitle":       false,
        "tabbingIdentifier": "morphology_wizard",
        "fileDropEnabled":   false,
        "height": 720,
        "width":  1280
      },
      {
        "title": "Morphology Viewer",
        "label": "viewer",
        "url":   "viewer.html",
        "minimizable":       true,
        "maximizable":       true,
        "resizable":         true,
        "closable":          true,
        "fullscreen":        false,
        "focus":             true,
        "decorations":       true,
        "visible":           false,
        "alwaysOnTop":       false,
        "contentProtected":  false,
        "skipTaskbar":       false,
        "acceptFirstMouse":  false,
        "hiddenTitle":       false,
        "tabbingIdentifier": "morphology_wizard",
        "fileDropEnabled":   false,
        "height": 1080,
        "width":  1920
      },
      {
        "title": "About",
        "label": "about",
        "url":   "about.html",
        "minimizable":       true,
        "maximizable":       true,
        "resizable":         false,
        "closable":          true,
        "fullscreen":        false,
        "focus":             true,
        "decorations":       true,
        "visible":           false,
        "alwaysOnTop":       false,
        "contentProtected":  false,
        "skipTaskbar":       false,
        "acceptFirstMouse":  false,
        "hiddenTitle":       false,
        "tabbingIdentifier": "morphology_wizard",
        "fileDropEnabled":   false,
        "height": 300,
        "width":  400
      }
    ],
    "updater": {
      "active": false
    },
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "morph-wiz",
      "shortDescription": "Create realistic neuron morphologies",
      "longDescription": "",
      "copyright": "2024 David McDougall",
      "category": "DeveloperTool",
      "resources": [],
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "appimage": {},
      "deb": {
        "depends": []
      },
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    }
  }
}
